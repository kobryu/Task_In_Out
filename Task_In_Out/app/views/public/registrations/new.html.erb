<div style="margin-top : 100px"></div>
<div class="box1">
  <div class="box-inner">
    <h1>新規登録</h1>

    <%= form_with model: @user, url: registration_path(resource_name),  id: 'new_user', class: 'new_user',local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

      <div class="box-name">
        <%= f.label :"名前" %>
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :"名前" %>
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
       <div class="box-name">
        <%= f.label :"フリガナ" %>
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.label :"フリガナ" %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      <div class="box-email">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "true" %>
      </div>
        <div class="box-email">
        <%= f.label :"電話番号（ハイフンなし）" %>
        <%= f.text_field :telephone_number, autocomplete: true %>
      </div>

      <div class="box-password">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="box-password">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    <div class="box-newusr">
      <p><span>------------</span> 既に登録されていますか？ <span>------------</span></p>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>

