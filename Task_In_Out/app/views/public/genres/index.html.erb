<div style="margin-top : 100px"></div>
<div class='container px-5 px-sm-0'>

	<div class='row'>
	<div class="col-md-8"><h1>ジャンル管理</h1></div>
	<div class="col-md-6">
	<%= form_with model:@genre, url: genres_path do |f| %>
	<%= f.label :name, "ジャンル名:" %>
	<%= f.text_field :name %>
	<%= f.submit '登録', class: "btn btn-primary ml2" %>
  <% end %>
	</div>
		<table id="dtBasicExample" class="table" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th>機能</th>
			
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td class="text-center">
						  <%= link_to "編集", edit_genre_path(genre), class: "btn btn-success" %>
						  <%= link_to "削除", genre_path(genre.id), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>

