<% if @genre.errors.any? %>
  There are <%= @genre.errors.count %> error(s)
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div style="margin-top : 100px"></div>
<div class='container px-5 px-sm-0'>

	<div class='row'>
	<div class="col-md-7"><h1>Genre list</h1></div>
	<div class="col-md-5">
	<%= form_with model:@genre, url: genres_path do |f| %>
	<%= f.label :name, "Name of the Genre:" %>
	<%= f.text_field :name %>
	<%= f.submit 'Register', class: "btn btn-primary ml2" %>
  <% end %>
	</div>
		<table id="dtBasicExample" class="table" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Name of the genre</th>
					<th>Function</th>
					<th>You can see the past posts by genres</th>

				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td>
						  <%= link_to "Edit", edit_genre_path(genre), class: "btn btn-success" %>
						</td>
						<td><%=link_to "Genre search", genre_path(genre.id), class: "btn btn-primary"%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>

