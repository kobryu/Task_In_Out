    <div class='col-md-8 offset-md-1'>
  		<h2>task detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= @task.title %></td>
          <td><%= @task.body %></td>
          <% if @task.user == current_user %>
            <td><%= link_to 'Edit', edit_task_path(@task), class: "btn btn-sm btn-success edit_task_#{@task.id}" %></td>
            <td><%= link_to 'Destroy', @task, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_task_#{@task.id}" %></td>
          <% end %>
        </tr>
      </table>

      <div class="post-comments-index">
        <%= render "public/post_comments/index", task: @task %>
      </div>
       <%= render "public/post_comments/form", task: @task, post_comment: @post_comment %>

    </div>
