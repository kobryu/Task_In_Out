<!DOCTYPE html>
<html>
  <head>
    <title>TaskInOut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>
   <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="#">TaskInOut</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/tasks">タスク一覧<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/groups">グループ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/genres">ジャンル</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/index">ユーザー</a>
          </li>

        </ul>

          <% if user_signed_in? %>
            <li class="btn btn-outline-success">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="btn btn-outline-success">
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li class="btn btn-outline-success">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
          <% end %>

      </div>
    </nav>
  </header>



  <body>
    <%= yield %>
  </body>


<footer class="footer py-3">
  <div class="container">
    <p>&copy; 20**-20** Company, Inc.</p>
  </div>
</footer>
</html>
