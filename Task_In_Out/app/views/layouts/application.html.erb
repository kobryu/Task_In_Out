<!DOCTYPE html>
<html>
  <head>
    <title>TaskInOut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
   <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <%= link_to "TaskInOut", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "タスク一覧", admin_tasks_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧", admin_users_path, class: "nav-link" %>
            </li>
          <% elsif user_signed_in? %>
            <%= link_to "タスク", tasks_path, class: "nav-link" %>
            <%= link_to "タスク投稿", new_task_path, class: "nav-link" %>
            <%= link_to "グループ", groups_path, class: "nav-link" %>
            <%= link_to "ジャンル", genres_path, class: "nav-link" %>
            <%= link_to "連絡先", users_index_path, class: "nav-link" %>
            <%= link_to "ブックマーク", favorites_path, class: "nav-link" %>
          <% else %>

          <% end %>



        </ul>

          <% if admin_signed_in? %>

            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>

          <% elsif user_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-warning", method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning" %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class: "btn btn-warning" %>
            </li>
            <li>
              <%= link_to "管理者用", new_admin_session_path, class: "btn btn-warning" %>
            </li>
          <% end %>

      </div>
    </nav>
  </header>



  <body>
    <%= yield %>
  </body>


<footer class="footer py-3">
  <div class="container">
    <p>&copy; 20**-20** Company, Inc.</p>
  </div>
</footer>
</html>
